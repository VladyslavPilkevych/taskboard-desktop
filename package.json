{
  "name": "taskboard-desktop",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "app",
    "backend"
  ],
  "scripts": {
    "dev:backend": "pnpm --filter backend run start:dev",
    "dev:frontend": "pnpm --filter app run dev",
    "dev:electron": "pnpm --filter src-electron dev",
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\" \"pnpm dev:electron\"",
    "build:backend": "pnpm --filter backend run build",
    "build:frontend": "pnpm --filter app build",
    "build:electron": "pnpm --filter src-electron build",
    "build": "pnpm build:backend && pnpm build:frontend && pnpm build:electron",
    "prisma:migrate": "pnpm --filter backend prisma migrate dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/cli": "^11.0.11",
    "@nestjs/schematics": "^11.0.9",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.47.0"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
